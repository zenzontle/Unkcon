@model IEnumerable<Unkcon.Models.ReplyModels>

@{
    ViewBag.Title = "User Replies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Replies</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Reply)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Reply)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID, commentID = item.Comment.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Back to List", "Index", "Comment")
</p>