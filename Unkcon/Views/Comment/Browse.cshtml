@using Microsoft.AspNet.Identity
@model IEnumerable<Unkcon.Models.CommentModel>

@{
    ViewBag.Title = "Other's comments";
}

@if (Request.IsAuthenticated)
{
    <h2>Other's comments, @User.Identity.GetUserName()</h2>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.ActionLink("Reply", "Create", "Reply", new { commentId = item.ID }, null)
                </td>
            </tr>
        }

    </table>
}
else
{
    <h2>Please login.</h2>
}